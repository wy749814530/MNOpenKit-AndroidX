<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MNImageBtn">
        <attr name="normalImage" format="reference"/>
        <attr name="selectedImage" format="reference"/>
        <attr name="autoChange" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="SaundProgressBar">
        <attr name="progressIndicator" format="reference"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="reference|color"/>
        <attr name="textStyle">
            <flag name="normal" value="0"/>
            <flag name="bold" value="1"/>
            <flag name="italic" value="2"/>
        </attr>
        <attr name="textAlign">
            <flag name="left" value="0"/>
            <flag name="center" value="1"/>
            <flag name="right" value="2"/>
        </attr>
        <attr name="offset" format="dimension"/>
    </declare-styleable>
    <!-- 圆角属性-->
    <attr name="borderRadius" format="dimension"/>
    <attr name="type">
        <enum name="circle" value="0"/>
        <enum name="round" value="1"/>
    </attr>

    <!--SD开录像控件-->
    <declare-styleable name="RulerView">
        <attr name="direction" format="enum">
            <enum name="vertical" value="0" />
            <enum name="horizontal" value="1" />
        </attr>
        <attr name="endValue" format="integer" />
        <attr name="defaultValue" format="integer" />
    </declare-styleable>
</resources>