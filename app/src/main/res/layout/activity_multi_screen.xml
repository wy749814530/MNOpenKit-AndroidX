<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <View
        android:id="@+id/h_view_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_centerInParent="true"
        android:background="@color/white" />

    <View
        android:id="@+id/v_view_line"
        android:layout_width="2dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@color/white" />

    <RelativeLayout
        android:id="@+id/rl_channel_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/h_view_line"
        android:layout_toLeftOf="@+id/v_view_line">

        <ImageView
            android:id="@+id/iv_channel_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_channel_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/h_view_line"
        android:layout_toRightOf="@+id/v_view_line"
        android:background="@color/blue_47C2FC">

        <ImageView
            android:id="@+id/iv_channel_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_channel_3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/h_view_line"
        android:layout_toLeftOf="@+id/v_view_line"
        android:background="@color/red">

        <ImageView
            android:id="@+id/iv_channel_3"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_channel_4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/h_view_line"
        android:layout_toRightOf="@+id/v_view_line">

        <ImageView
            android:id="@+id/iv_channel_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</RelativeLayout>