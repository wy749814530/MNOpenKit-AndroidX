<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgound_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rlLay1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_normal">

        <ImageView
            android:id="@+id/iv_left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/home_set_acousto_red" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/iv_select_1"
            android:layout_toRightOf="@+id/iv_left_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_sw_0"
                android:textColor="@color/dark"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/t_t1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev_wh_1"
                android:textColor="@color/gray"
                android:textSize="14dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/home_set_time_set_choice"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlLay2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_normal">

        <ImageView
            android:id="@+id/iv_left_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/home_set_acousto_color" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/iv_select_2"
            android:layout_toRightOf="@+id/iv_left_icon2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_sw_1"
                android:textColor="@color/dark"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/t_t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev_wh_2"
                android:textColor="@color/gray"
                android:textSize="14dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/home_set_time_set_choice"
            android:visibility="invisible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlLay3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_white_normal">

        <ImageView
            android:id="@+id/iv_left_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/home_set_acousto_smart" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/iv_select_3"
            android:layout_toRightOf="@+id/iv_left_icon4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/set_sw_2"
                android:textColor="@color/dark"
                android:textSize="16dip" />

            <TextView
                android:id="@+id/t_t3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev_wh_3"
                android:textColor="@color/gray"
                android:textSize="14dip" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/home_set_time_set_choice"
            android:visibility="invisible" />
    </RelativeLayout>



</LinearLayout>