<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="1dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/item_share_img"
        android:layout_width="100dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/dynamic_play_placeholder_default" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/item_share_img"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_share_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hjz"
            android:textColor="@color/text_default"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/item_friend_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray_666666"
            android:textSize="13sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:src="@mipmap/btn_right" />
</RelativeLayout>